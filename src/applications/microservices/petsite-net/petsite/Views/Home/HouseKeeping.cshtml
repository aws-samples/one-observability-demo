@{
    ViewData["Title"] = "House Keeping";
}

<section class="pet-hero">
    <div class="container">
        <img class="pet-hero-title-title" src="~/images/main_banner_text.png" />
    </div>
</section>

<br/>
<div class="container align-items-center">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <hr>
            <p class="mb-0">@Html.Raw(ViewBag.ErrorMessage.Replace("\n", "<br>"))</p>
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Housekeeping Complete</h4>
            <hr>
            <p class="mb-0">All pets open for adoption!</p>
        </div>
    }
</div>