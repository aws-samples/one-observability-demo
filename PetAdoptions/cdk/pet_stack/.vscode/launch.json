{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "CDK Debugger",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": [
                "-r",
                "./node_modules/ts-node/register/transpile-only"
            ],
            // Entry point of your stack
            "args": [
                        "${workspaceFolder}/app/pet_stack.ts"
                    ],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/config.yaml"
            }
        }
    ]
}